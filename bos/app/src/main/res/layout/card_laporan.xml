<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:background="@drawable/button_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/laporan_pegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Nama"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:text="Pending"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/laporan_tolak"
            android:layout_toStartOf="@+id/laporan_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/laporan_pending"
            android:text="10"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_below="@+id/laporan_tolak"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Ditolak"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/laporan_tolak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/laporan_tolak"
            android:text="10"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Diterima"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/laporan_terima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/laporan_terima"
            android:text="10"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>