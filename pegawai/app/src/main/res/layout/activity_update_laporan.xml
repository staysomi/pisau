<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/black"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Update Laporan"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />

    <ImageButton
        android:id="@+id/btn_ul_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_cek"
        android:src="@drawable/ic_baseline_close_24" />

    <LinearLayout
        android:id="@+id/ll_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Produk:"
            android:textSize="@dimen/font_normal" />

        <Spinner
            android:id="@+id/spinner_produk_u"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_produk"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pekerjaan:"
            android:textSize="@dimen/font_normal" />

        <Spinner
            android:id="@+id/spinner_pekerjaan_u"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pekerjaan"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_perongkos_u"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Ongkos:"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_total_u"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/padding_large"
            android:gravity="center_vertical"
            android:hint="Total"
            android:inputType="number"
            android:padding="@dimen/padding_normal"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_u"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/ll_total"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/ll_imagebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView_u"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnChoose_u"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small_10"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/button_cek"
            android:text="Pilih Gambar" />

        <Button
            android:id="@+id/btn_u_laporan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small_10"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/button_login"
            android:text="Update Laporan" />

    </LinearLayout>


</RelativeLayout>